<div>
  <% if @error_messages&.any? %>
    <ul>
      <% @error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<form action="/memos/<%= params[:id] %>" method="post">
  <div class="form-items">
    <div class="form-item">
      <label for="title" class="label">タイトル</label>
      <input type="text" name="title" id="title" value="<%= @memo['title'] %>" class="text-input">
    </div>
    <div class="form-item">
      <label for="content" class="label">内容</label>
      <textarea name="content" id="content" class="textarea"><%= @memo['content'] %></textarea>
    </div>
  </div>
  <input type="hidden" name="_method" value="PATCH">
  <div class="btn-items">
    <button type="submit" class="btn btn-success">変更</button>
    <button type="button" onclick="location.href='/memos/<%= params[:id] %>'" class="btn btn-secondary">戻る</button>
  </div>
</form>
